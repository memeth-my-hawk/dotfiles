#### another alternative logout method ####
mode "logout? (Y/n)" {
	bindsym y exec i3-msg exit
	bindsym n mode "default"
	bindsym Escape mode "default"
	bindsym Return exec i3-msg exit
}
bindsym $mod+Escape mode "logout? (Y/n)"

